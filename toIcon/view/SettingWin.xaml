<Window x:Class="toIcon.view.SettingWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:toIcon.view"
		xmlns:supUI="clr-namespace:csharpHelp.ui"
        mc:Ignorable="d"
        Title="设置" Height="200" Width="400" WindowStartupLocation="CenterOwner">
    <Grid>
		<Grid Margin="8">
			<Grid.RowDefinitions>
				<RowDefinition Height="35"/>
				<RowDefinition Height="35"/>
				<RowDefinition Height="35"/>
				<RowDefinition Height="*"/>
			</Grid.RowDefinitions>
			<supUI:ComboBoxLabel Grid.Row="0" Content="语言" LeftWidth="80" Width="200" Height="25" HorizontalAlignment="Left" VerticalAlignment="Center" Padding="4,0,0,0" x:Name="cbxLang"/>
			<supUI:MiniButton Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" Width="140" Height="25" Content="注册到文件" x:Name="btnRegFile" Click="BtnRegFile_Click"/>
			<!--<supUI:MiniButton Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" Width="140" Height="25" Content="注册到目录背景" x:Name="btnRegDir" Click="BtnRegDir_Click"/>-->
			<supUI:MiniButton Grid.Row="3" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="50" Height="25" Content="确定" x:Name="btnOk" Click="BtnOk_Click"/>
		</Grid>
	</Grid>
</Window>
